@using PetShop.Client.ViewModels
@using PetShop.Data.Model
@model IEnumerable<Animal>
@{
    ViewData["Title"] = "Browse Our Catalogue";
}
<div>
    <div style="display:flex;margin-left:1100px">
        <label for="filterCategoriesForm">Filter Through Categories: </label>
        <form id="filterCategoriesForm" asp-action="Index" method="get">
            <select id="categorySelection" name="id" class="form-select"
                    asp-items="ViewBag.Categories" onchange="this.form.submit()"
                    style="width:40%;margin: 0 auto;margin-right:200px">
                <option value="0">------------</option>
            </select>
        </form>
    </div>

    <table class="table table-responsive" style="width:40%;margin: 0 auto;margin-right:700px">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">Description:</th>
                <th scope="col">Category:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="CatalogTable">
                    <td class="DisplayNameTableContainer">
                        <div class="DisplayNameTable">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                    </td>
                    <td>
                        <a asp-controller="Catalog" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.PhotoUrl" height="200" width="200">
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


