@using PetShop.Client.ViewModels
@model NewAnimalViewModel

@{
    ViewData["Title"] = "Add a new animal";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Animal.PhotoUrl" class="control-label"></label>
                        <input name="photo" asp-for="@Model.Animal.PhotoUrl" class="form-control" />
                        <span asp-validation-for="@Model.Animal.PhotoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Animal.Name" class="control-label"></label>
                        <input asp-for="@Model.Animal.Name" class="form-control" />
                        <span asp-validation-for="@Model.Animal.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Animal.Description" class="control-label"></label>
                        <input asp-for="@Model.Animal.Description" class="form-control" />
                        <span asp-validation-for="@Model.Animal.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Animal.Category" class="control-label"></label>
                        <input asp-for="@Model.Animal.Category" class="form-control" />
                        <span asp-validation-for="@Model.Animal.Category" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#photo").val();
        })

        $("#photo").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}